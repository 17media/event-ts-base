{
  "name": "@17media/ts-base",
  "description": "The infrastructure of TypeScript project",
  "version": "0.0.3",
  "main": "index.js",
  "bin": {
    "ts-base-init": "bin/ts-base-init"
  },
  "devDependencies": {
    "@types/chalk": "^2.2.0",
    "@types/jest": "^23.3.0",
    "jest": "^23.4.1",
    "npm-run-all": "^4.1.3"
  },
  "dependencies": {
    "@types/node": "^10.5.2",
    "chalk": "^2.4.1",
    "fast-glob": "^2.2.2",
    "husky": "^1.0.0-rc.13",
    "lint-staged": "^7.2.0",
    "prettier": "^1.13.7",
    "ts-node": "^7.0.0",
    "tslint": "^5.11.0",
    "tslint-config-airbnb": "^5.9.2",
    "tslint-config-prettier": "^1.13.0",
    "tslint-plugin-prettier": "^1.3.0",
    "tslint-react": "^3.6.0",
    "typescript": "^2.9.2"
  },
  "scripts": {
    "lint": "tslint --project . --exclude package.json",
    "build": "rm -rf out && tsc && cp -r .vscode bin tsconfig.json tslint.json prettier.config.js out/"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx,css,md}": [
      "prettier --write",
      "git add"
    ]
  },
